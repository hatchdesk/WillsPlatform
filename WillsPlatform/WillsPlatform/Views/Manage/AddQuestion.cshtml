@using WillsPlatform.Web.Models.Forms;
@{
    ViewData["Title"] = "Add";
    @model AddQuestionViewModel
}

<div class="pagetitle">
    <h1>Create</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/">Home</a></li>
            <li class="breadcrumb-item"><a href="~/Manage/Questionnaires">Questions</a></li>
            <li class="breadcrumb-item active">Add</li>
        </ol>
    </nav>
    
    @await Html.PartialAsync("_Notification");

</div>


<section class="section">
   <div class="row">
        <div class="col-lg-9 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Add new questions</h5>
                    <form asp-action="AddQuestion" asp-controller="Manage" method="post" class="row g-3">
                        <!-- Text input -->
                        <div class="col-md-12">
                            <div class="form-floating">
                                <input asp-for="Text" type="text" class="form-control" id="floatingName" placeholder="Your Name">
                                <label asp-for="Text" for="floatingName"></label>
                                <span asp-validation-for="Text" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Form dropdown -->
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <select asp-for="FormId" asp-items="Model.Forms" class="form-select" id="floatingSelect" aria-label="State">
                                    <option value="" selected>Please select</option>
                                </select>
                                <label asp-for="FormId" for="floatingSelect"></label>
                                <span asp-validation-for="FormId" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Field dropdown -->
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <select asp-for="FieldId" asp-items="Model.Fields" class="form-select" id="floatingSelect" aria-label="State">
                                    <option value="" selected>Please select</option>
                                </select>
                                <label asp-for="FieldId" for="floatingSelect"></label>
                                <span asp-validation-for="FieldId" class="text-danger"></span>
                            </div>
                        </div>


                        <!-- Form handle -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
   </div>
</section>