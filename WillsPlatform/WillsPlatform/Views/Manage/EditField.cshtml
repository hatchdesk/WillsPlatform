@using WillsPlatform.Web.Models.Forms;
@{
    ViewData["Title"] = "Edit";
    @model EditFieldViewModel
}

<div class="pagetitle">
    <h1>Edit</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/">Home</a></li>
            <li class="breadcrumb-item"><a href="~/Manage/Fields">Fields</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>
    @await Html.PartialAsync("_Notification")
</div>

<section class="section">
   <div class="row">
        <div class="col-lg-9 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Form Information</h5>
                    <form asp-action="EditField" asp-controller="Manage" method="post" class="row g-3">
                        

                        <!-- Text input -->
                        <div class="col-md-12">
                            <div class="form-floating">
                                <input asp-for="Name" type="text" class="form-control" id="floatingName" placeholder="Your Name">
                                <label asp-for="Name" for="floatingName"></label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Hedden Field-->
                        <input asp-for="Id" hidden />

                        <!-- Form handle -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
   </div>
</section>