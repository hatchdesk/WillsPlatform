@using WillsPlatform.Web.Models.Forms;
@{
    ViewData["Title"] = "Add";
    @model EditTemplateViewModel

}

@await Html.PartialAsync("_breadcrumb", new BaseViewModel() { Breadcrumbs = Model.Breadcrumbs, Heading = Model.Heading })

<section class="section">
    <div class="row">
        <div class="col-lg-9 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Form Information</h5>
                    <form asp-action="EditTemplates" asp-controller="Manage" method="post" class="row g-3">
                        
                        <!-- Form dropdown -->
                        <div class="col-md-12">
                            <div class="form-floating mb-3">
                                <select asp-for="FormId" asp-items="Model.Forms" class="form-select" id="floatingSelect" aria-label="State">
                                    <option value="" selected>Please select</option>
                                </select>
                                <label asp-for="FormId" for="floatingSelect"></label>
                                <span asp-validation-for="FormId" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Text input -->
                        <textarea asp-for="Text" class="tinymce-editor">
                        <p>Hello World!</p>
                        <p>This is TinyMCE <strong>full</strong> editor</p>
                        </textarea>

                        <!-- Hedden Field-->
                        <input asp-for="Id" hidden />
                        <!-- Form handle -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>