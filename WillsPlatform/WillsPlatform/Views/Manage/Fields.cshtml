@model FieldsViewModel
@{
    ViewData["Title"] = "Fields";
}

<div class="pagetitle">
    <h1>Fields</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active">Fields</li>
        </ol>
    </nav>
    @await Html.PartialAsync("_Notification")
</div>
<section class="section">
    <div class="row">
        <div class="col-12">
            <div class="card recent-sales overflow-auto">

                <div class="card-body">
                    <h5 class="card-title">Fields<span>| Management</span> <a asp-action="AddField" asp-controller="Manage" class="btn btn-primary float-end">Add New</a></h5>
                    <table class="table table-borderless datatable">
                        <thead>
                            <tr>
                                <th scope="col">S.No</th>
                                <th scope="col">Name</th>
                                <th scope="col">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var (field, index) in Model.Fields.Select((value, i) => (value, ++i)))
                                {

                                    <tr>
                                        <th scope="row"><a href="#">#@index</a></th>
                                        <td>@field.Name</td>
                                        <td>
                                            <a asp-action="EditField" asp-controller="Manage" asp-route-id="@field.Id"><i class="ri-edit-2-line"></i></a>
                                            <a asp-action="DeleteField" asp-controller="Manage" asp-route-id="@field.Id"><i class="ri-delete-bin-5-line"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div>

            </div>
        </div>
    </div>
</section>